                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="测试ArrowMenuDialog竖向"
                android:textColor="#000" />

            <Button
                android:id="@+id/btn_test_center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="测试AlertDialogFragment"
                android:textColor="#000" />

            <Button
                android:id="@+id/btn_test_center_custom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="测试AlertDialog自定义"
                android:textColor="#000" />

            <Button
                android:id="@+id/btn_test_center_long"
